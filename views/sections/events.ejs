<div id="events-container" class="container bg-white col-sm-8 mx-auto">
    <div class="row py-5 my-4">

        <% for (event of events) { console.log(event.name); %>
            <div class="col-md-6 col-lg-4 col-xl-3 mb-4 mb-lg-5 px-5 px-md-3 px-lg-auto">
                <div class="card rounded shadow-sm border-1 h-100">
                    <div class="card-body p-4"><img
                            src="<%= event.img %> >" alt=""
                            class="img-fluid d-block mx-auto mb-3">
                        <h4> <%= event.name %> </h4>
                        <p class="medium text-muted mb-4"> <%= event.description %>  </p>
                        <ul class="list-inline mb-2">
                            <li class="list-inline-item m-0">
                                <i class="bi bi-geo-alt-fill"></i>
                                <span class="medium px-1"><%= event.location %></span>
                            </li>
                        </ul>
                        <ul class="list-inline mb-2">
                            <li class="list-inline-item m-0">
                                <i class="bi bi-calendar-check-fill"></i>
                                <span class="medium px-1"><%= event.date + " - " + event.time%></span>
                            </li>
                        </ul>
                        <ul class="list-inline">
                            <li class="list-inline-item m-0">
                                <i class="bi bi-hourglass-split"></i>
                                <span class="medium px-1"><%= event.duration%></span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <% } %>

    </div>
</div>